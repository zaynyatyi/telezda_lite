<div class="row">
  <h1>
    You are in the Yard of <%= @city.name %>.
  </h1>
  <div class="col-xs-3 bordered">
    <%= render "places" %>
  </div>
  <div class="col-xs-3 items_list bordered" id="user_items_list">
    <h3>Your items</h3>
    <ul>
      <% @user_items.each do |item| %>
      <li>
        <%= link_to city_item_push_to_city_stock_path(@city, item.id), class: "push_link", remote: true, title: item.description.name do%>
          <div class="item_thumbnail"><img src="/assets/thumbnails/<%= item.description.name %>.png" /></div>
        <% end %>
        <%= link_to "#", class: "craft_link", remote: true, title: "Move to crafting slot" do %>
          <div class="craft_button"></div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="col-xs-3 bordered"></div>
  <div class="col-xs-3 items_list bordered" id="stock_items_list">
    <h3>Stock items</h3>
    <ul>
      <% @stock_items.each do |item| %>
      <li>
        <%= link_to city_item_pop_from_city_stock_path(@city, item.id), class: "pop_link", remote: true, title: item.description.name do %>
          <div class="item_thumbnail"><img src="/assets/thumbnails/<%= item.description.name %>.png" /></div>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-xs-3"></div>
  <div class="col-xs-2 craft_slot bordered"></div>
  <div class="col-xs-2 craft_slot bordered"></div>
  <div class="col-xs-2 craft_slot bordered"></div>
  <div class="col-xs-2">
    <%= button_to "Clear Slots", "#", class: "btn-s btn-danger", remote: true %>
    <%= button_to "Craft", "#", class: "btn-s btn-success", remote: true %>
  </div>
</div>

