<div class="row">
  <h1>
    Construction block here, <%= current_user.name %>.
  </h1>
  <div class="col-xs-3">
    <%= render "places" %>
  </div>
  <div class="col-xs-9 items_list bordered" id="stock_items_list">
    <h3>Stock items</h3>
    <ul>
      <% @grouped_stock_items.keys.each do |item_name| %>
      <li>
        <div>
        <%= link_to city_item_pop_from_city_stock_path(@city, @grouped_stock_items[item_name][:id]), class: "pop_link", remote: true, title: item_name do %>
          <div class="item_thumbnail"><img src="/assets/thumbnails/<%= item_name %>.png" /></div>
        <% end %>
        <div class="item_amount"><%= @grouped_stock_items[item_name][:amount] %></div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-xs-3">
  </div>
  <div class="col-xs-3">
    <ul class="buildings">
      <% @buildings.each do |building| %>
        <li>
          <p><%= building.description.name %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
